<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/tasks_button"
        android:layout_marginStart="25dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_check_box_30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/tasks_button"
        android:layout_marginStart="23dp"
        android:textColor="@color/colorInactive"
        android:layout_alignParentStart="true"
        android:text="Tasks"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:id="@+id/history_button"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_assignment_30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_button"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorInactive"
        android:layout_centerHorizontal="true"
        android:text="History"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/profile_name"
        android:layout_marginEnd="25dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_person_30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorInactive"
        android:layout_below="@id/profile_name"
        android:text="Profile"/>


</RelativeLayout>
